<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <rules css:if-content="#visual-portal-wrapper">
        <theme href="pan-eu.html" />

        <merge attributes="class" css:theme="body" css:content="body" />

        <replace css:theme="html head title" css:content="html head title" />
        <after css:theme-children="html head" css:content="html head base" />
        <after css:theme-children="html head" css:content="html head script" />

        <copy attributes="id dir" css:content="body" css:theme="body" />

        <replace css:theme-children="#portal-personaltools-wrapper" css:content-children="#portal-personaltools-wrapper" />

        <copy attributes="href" css:theme="#portal-logo" css:content="#portal-logo" />

        <replace css:theme-children="#nav" css:content-children="#portal-globalnav" />

        <replace css:theme-children="div.top-menu ul" css:content="#portal-siteactions" />

        <replace css:theme-children="#portal-breadcrumbs" css:content-children="#portal-breadcrumbs" />
        <drop css:theme=".portlet-content" />

        <replace css:theme-children="#user-corner-portlet" css:content-children=".portlet-static-user-corner" />

        <drop css:content="#portal-breadcrumbs" />
        <replace css:theme-children=".tabbed-content" css:content-children="#portal-column-content" />

    </rules>
</rules>
