<?xml version="1.0" encoding="UTF-8"?>
<rules
    xmlns="http://namespaces.plone.org/diazo"
    xmlns:css="http://namespaces.plone.org/diazo/css"
    xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

    <xsl:template match="//dl[contains(@class,'portlet-collection-user-corner')]//a">
      <a target="_blank"><xsl:apply-templates select="./@*[contains(' href title class rel ', concat(' ', name(), ' '))]"/><xsl:value-of select="." /></a>
    </xsl:template>

    <rules css:if-content="#visual-portal-wrapper">
        <theme href="pan-eu.html" />

        <drop theme="/html/head/meta" />
        <drop theme="/html/head/title" />
        <drop theme="/html/head/script" />

        <drop css:theme="link[href*='copernicusLand.css']" />

        <after content="/html/head/title" theme-children="/html/head" />
        <after content="/html/head/meta" theme-children="/html/head" />
        <after content="/html/head/base | /html/head/style | /html/head/script | /html/head/link | /html/head/comment()"
            theme-children="/html/head" />

        <copy attributes="class id dir" content="/html/body" theme="/html/body" />

        <copy attributes="href" css:theme="#portal-logo" css:content="#portal-logo" />

        <replace css:theme-children="#nav" css:content-children="#portal-globalnav" />

        <replace css:theme-children="div.top-menu ul" css:content-children="#portal-siteactions" />

        <replace css:theme-children="#portal-breadcrumbs" css:content-children="#portal-breadcrumbs" />
        <drop css:theme=".portlet-content" />

        <replace css:theme-children="#user-corner-portlet" css:content-children=".portlet-collection-user-corner" />
    
        <drop css:content="#portal-breadcrumbs" />

        <replace css:theme-children=".tabbed-content" css:content-children="#portal-column-content"/>

        <replace css:content="#parent-fieldname-title" >
            <xsl:copy-of select="."/>
            <a href="javascript:window.print()" class="printButton">
                <img src="print.png" alt="" />Print
            </a>
        </replace>

    </rules>
</rules>
